/* pages/shop/shopdetails.wxss */
@import "../../authordialog/authordialog.wxss";

.drawer_detail_box {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  top: 18%;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  border-radius: 3rpx;
}

.textcontain {
  width: 60%;
  display: flex;
  flex-direction: column;
  margin-left: 40%;
}

.textclass {
  display: -webkit-box;
  color: #000;
  line-height: 40rpx;
  height: 80rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.rowline {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  background-color: #000;
}

.color_contain {
  display: flex;
  flex-direction: row;
}

.colorstyle {
  border: 1rpx solid gray;
  padding: 10rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
  text-align: center;
  border-radius: 10rpx;
}

.goods {
  width: 40%;
  height: 52rpx;
  display: flex;
  flex-direction: row;
  margin-left: 40%;
  /*给主容器设一个边框*/
  border: 1rpx solid #ccc;
  border-radius: 6rpx;
  margin-right: 5%;
}

/*数值*/

.numstyle {
  /*给中间的input设置左右边框即可*/
  border-left: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
  width: 50%;
  text-align: center;
  height: 52rpx;
}

.plusstyle {
  width: 25%;
  font-size: medium;
  text-align: center;
  line-height: 52rpx;
}

/*普通样式*/

.normal {
  width: 25%;
  color: black;
  font-size: medium;
  text-align: center;
  line-height: 52rpx;
}

/*禁用样式*/

.disabled {
  width: 25%;
  color: #ccc;
  font-size: medium;
  text-align: center;
  line-height: 52rpx;
}
 .bottomitem{
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 1002;
} 
.imgsytle{
  display: flex;
  height: 200rpx;
  width: 25%;
  position: fixed;
  top: 15%;
  margin-left: 5%;
  margin-right: 5%;
  z-index: 1002;
  border-radius: 15rpx
}